<div class="row">
  <div class="card">
    <div class="card-title">
      <h1>
        <%= @article.title %>
      </h1>
        <h3>
          <%= link_to 'Modify', edit_article_path(@article) %>
          - <%= link_to 'Delete', article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </h3>
      </div>
      <div class='card-body'>
        <p> <%= @article.content %> </p>
      </div>
    </div>
  </div>
</div>
